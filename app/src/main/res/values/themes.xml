<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.BattleShip" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:popupMenuStyle">@style/popupMenu</item>
    </style>

    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.BattleShip.Button.Rounded
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.BattleShip.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Main_Menu_Button" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <!--        <item name="android:insetTop">5dp</item>-->
        <!--        <item name="android:insetBottom">5dp</item>-->
        <!--        <item name="android:inset">5dp</item>-->
        <!--        <item name="android:insetRight">5dp</item>-->
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">100dp</item>
        <!--        <item name="autoSizeMinTextSize">10sp</item>-->
        <!--        <item name="autoSizeMaxTextSize">60sp</item>-->
        <!--        <item name="autoSizeStepGranularity">1sp</item>-->
        <!--        <item name="autoSizeTextType">uniform</item>-->
        <item name="android:paddingHorizontal">5dp</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/sky_blue</item>
        <item name="android:backgroundTint">@color/light_sky_blue</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/righteous</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="cornerRadius">20dp</item>

        <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:elevation">15dp</item>

        <!--                <item name="android:stateListAnimator">@animator/main_button_animator</item>-->
<!--        <item name="background">@drawable/button_with_shadow</item>-->
    </style>

    <style name="Square_Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:insetTop">1px</item>
        <item name="android:insetBottom">1px</item>
        <item name="android:insetLeft">1px</item>
        <item name="android:insetRight">1px</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:paddingHorizontal">0dp</item>
        <item name="android:paddingVertical">0dp</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="autoSizeMaxTextSize">60sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="backgroundTint">@null</item>
<!--        <item name="android:backgroundTint">@color/sky_blue</item>-->
    </style>

    <style name="Square_TextView" parent="">
        <item name="android:inset">0px</item>
        <item name="android:insetBottom">0px</item>
        <item name="android:insetLeft">0px</item>
        <item name="android:insetRight">0px</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Sea_Line" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/light_sky_blue</item>
        <item name="android:orientation">horizontal</item>
        <!--        <item name="android:layout_gravity">right</item>-->
        <!--        <item name="android:layout_marginLeft">5dp</item>-->
    </style>

    <style name="popupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/rounded_popup</item>
    </style>

    <style name="Options_Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:insetTop">5dp</item>
        <item name="android:insetBottom">5dp</item>
        <item name="android:inset">5dp</item>
        <item name="android:insetRight">5dp</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:paddingHorizontal">5dp</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:backgroundTint">@color/sky_blue</item>
    </style>

    <style name="Toolbar_Button" parent="@style/Options_Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingHorizontal">0dp</item>
        <item name="android:paddingVertical">0dp</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="iconPadding">0dp</item>

        <item name="iconGravity">textStart</item>
    </style>

</resources>